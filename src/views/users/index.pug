extends ../layout.pug

block content
  h2 Список пользователей
  table(border="1")
    thead
      tr
        th Имя пользователя
        th Электронная почта
        th Ссылка
    tbody
      each user in users
        tr
          td= user.username
          td= user.email
          td
            a(href=`/users/${user.id}`) Просмотр
